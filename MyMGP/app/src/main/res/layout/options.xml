<?xml version="1.0" encoding="utf-8"?>
<!--A layout defines the visual structure for a user interface, such as the UI for an activity or app widget-->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/options"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/mainmenupage"
    tools:context="com.sidm.mymgp.LevelPage">

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:id="@+id/settings_sound"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Turn On Sounds"
            android:id="@+id/soundeffecton"
            android:layout_gravity="center_horizontal"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:textSize="18dp"
            android:textColor="#FFFFFF"
            />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Turn Off sounds"
            android:id="@+id/soundeffectoff"
            android:layout_gravity="center_horizontal"
            android:layout_below="@+id/soundeffecton"
            android:layout_alignEnd="@+id/soundeffecton"
            android:textSize="18dp"
            android:textColor="#FFFFFF"
            />

    </RadioGroup>

    <Button
        android:id="@+id/btn_backToMainAgain"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:background="@drawable/pbutton"
        android:text="Back to Main"
        android:textSize="18dp"
        android:textColor="#bdfcf2"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/settings_sound"
        android:layout_marginBottom="97dp" />


</RelativeLayout>