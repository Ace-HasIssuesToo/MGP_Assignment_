<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:id="@+id/tutorial"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/mainmenu">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="This is an enemy!"
        android:id="@+id/tutorial_enemytext"
        android:textSize="18dp"
        android:textColor="#ffffff">
    </TextView>
<!--
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="They turn into allies if you defeat them!"
        android:id="@+id/tutorial_allytext" />
-->

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/techcirclespritesheet"
        android:layout_below="@+id/imageView"
        android:layout_marginTop="116dp"
        android:id="@+id/imageView2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Draw patterns that match with the enemies, that is how you defeat them!"
        android:id="@+id/tutorial_instructiontext"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:textSize="18dp"
        android:textColor="#ffffff"></TextView>

    <ImageView
        app:srcCompat="@drawable/patternright"
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="41dp"
        android:layout_alignBottom="@+id/tutorial_instructiontext"
        android:layout_alignParentEnd="true" />

</RelativeLayout>