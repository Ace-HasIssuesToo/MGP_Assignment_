<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:id="@+id/tutorial"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/mainmenu">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="This is an enemy!"
        android:id="@+id/tutorial_enemytext"
        android:textSize="18dp"
        android:textColor="#ffffff">
    </TextView>


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/techcirclespritesheet"
        android:id="@+id/imageView2"
        android:layout_alignTop="@+id/tutorial_instructiontext"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="This is an ally!"
        android:id="@+id/tutorial_allyintro"
        android:textSize="18dp"
        android:textColor="#ffffff"
        android:layout_alignBottom="@+id/imageView"
        android:layout_alignParentStart="true">
    </TextView>

    <ImageView
        android:src="@drawable/patternright"
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="346dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Draw patterns that match with the enemies, that is how you defeat them!"
        android:id="@+id/tutorial_instructiontext"
        android:textSize="18dp"
        android:textColor="#ffffff"
        android:layout_marginTop="145dp"
        android:layout_below="@+id/tutorial_allyintro"
        android:layout_alignParentStart="true"></TextView>

    <ImageView
        android:src="@drawable/green1"
        android:id="@+id/imageView3"
        android:cropToPadding="false"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@+id/tutorial_allyintro"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="23dp" />

</RelativeLayout>